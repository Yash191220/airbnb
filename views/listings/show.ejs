<% layout("/layouts/boilerplate") %>

<!-- ================= LISTING DETAILS ================= -->
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3 class="fw-bold"><%= listing.title %></h3>
  </div>

  <div class="card col-5 offset-3 show-card listing-card shadow-sm">
    <img
      src="<%= listing.image?.url || '' %>"
      alt="Listing image"
      class="img-fluid rounded"
    />

    <div class="card-body">
      <p class="card-text text-muted">
        <%= listing.description %><br>
        <strong>&#8377; <%= listing.price.toLocaleString("en-IN") %></strong><br>
        <%= listing.location %>, <%= listing.country %>
      </p>
    </div>
  </div>
</div>

<!-- ================= EDIT / DELETE ================= -->
<% if (currUser !== null) { %>
<div class="btns mt-3">
  <a href="/listings/<%= listing._id %>/edit"
     class="btn btn-dark col-1 offset-3 edit-btn">
    Edit
  </a>

  <form method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark offset-5">Delete</button>
  </form>
</div>
<% } %>

<!-- ================= REVIEW FORM ================= -->
<% if (currUser !== null) { %>
<div class="review-form-wrapper mb-5 mx-auto">
  <h5 class="mb-3">
    Leave a review as <span class="fw-semibold"><%= currUser.username %></span>
  </h5>

  <form
    action="/listings/<%= listing._id %>/reviews"
    method="POST"
    class="review-form needs-validation"
    novalidate
  >

    <!-- Star Rating -->
    <div class="mb-3">
      <label class="form-label"></label>
      <div class="star-rating">
  <input type="radio" name="review[rating]" id="fa-star5" value="5" required>
  <label for="fa-star5">
    <i class="fa-solid fa-star"></i>
  </label>

  <input type="radio" name="review[rating]" id="fa-star4" value="4">
  <label for="fa-star4">
    <i class="fa-solid fa-star"></i>
  </label>

  <input type="radio" name="review[rating]" id="fa-star3" value="3">
  <label for="fa-star3">
    <i class="fa-solid fa-star"></i>
  </label>

  <input type="radio" name="review[rating]" id="fa-star2" value="2">
  <label for="fa-star2">
    <i class="fa-solid fa-star"></i>
  </label>

  <input type="radio" name="review[rating]" id="fa-star1" value="1">
  <label for="fa-star1">
    <i class="fa-solid fa-star"></i>
  </label>
</div>

      <div class="invalid-feedback">Please select a rating.</div>
    </div>

    <!-- Comment -->
    <div class="mb-4">
      <label class="form-label">Your experience</label>
      <textarea
        name="review[comment]"
        class="form-control review-textarea"
        rows="3"
        placeholder="Share what you loved about this place..."
        required
      ></textarea>
      <div class="invalid-feedback">Please write a review.</div>
    </div>

    <button class="review-submit-btn">
      Submit review
    </button>
  </form>
</div>
<% } %>


  <!-- ================= REVIEW LIST ================= -->
<% if (listing.reviews.length > 0) { %>
  <div class="row review-list">
    <% for (review of listing.reviews) { %>
      <div class="col-md-6 mb-4">
        <div class="review-card">

          <div class="review-header">
            <div class="review-avatar">
              <%= currUser ? currUser.username[0].toUpperCase() : "A" %>
            </div>

            <div class="review-meta">
              <strong>
                <%= currUser ? currUser.username : "Anonymous" %>
              </strong>
              <div class="review-stars">
                <% for(let i = 0; i < review.rating; i++) { %>â˜…<% } %>
              </div>
            </div>
          </div>

          <p class="review-text"><%= review.comment %></p>

          <% if (currUser !== null) { %>
          <form method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="review-delete">Delete</button>
          </form>
          <% } %>

        </div>
      </div>
    <% } %>
  </div>
<% } else { %>
  <p class="text-muted">No reviews yet.</p>
<% } %>

</div>
